---
import Layout from '../layouts/Layout.astro';
import Weather from '../components/Weather.astro';
---

<Layout title="Weather station.">
	<main>
		<div class=" bg-zinc-800 rounded-md items-center max-w-2xl mx-auto p-4">
		<h1 class="text-center">
			<span class="text-neutral-100 m-1 p-3 font-mono text-xl text-center">
				MQTT Simulated IoT weather station by 2111
			</span>
		</h1>
		</div>

		<div class="columns col-reverse">
			<Weather />
		</div>


		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
